@model LibraryApp.Web.Models.Book
@{
    ViewData["Title"] = "Supprimer le livre";
}

<h2>Supprimer le livre</h2>

<div class="alert alert-danger">
    Êtes-vous sûr de vouloir supprimer le livre <strong>@Model.Title</strong> ?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
