@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Http 
@inject IHttpContextAccessor HttpContextAccessor // Injecté pour l'affichage conditionnel

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">📚 LibraryApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @*<li class="nav-item"><a class="nav-link" asp-controller="Loans" asp-action="Index">Mes Emprunts</a></li>*@
                </ul>
                <ul class="navbar-nav">
                    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("UserId")))
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white-50">Bienvenue, @HttpContextAccessor.HttpContext?.Session.GetString("UserId")</span>
                        </li>
                        <li class="nav-item">
                            <form class="d-inline" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-outline-light ms-2">Déconnexion</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" asp-controller="Account" asp-action="Register">Inscription</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center py-3 bg-light mt-5">
        <small>&copy; 2025 - LibraryApp</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>