@* Assurez-vous d'avoir ce fichier et de le mettre à jour avec les propriétés ImageUrl, etc. *@
@model LibraryApp.Web.ViewModels.HomeIndexViewModel 
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Accueil";
    var userId = HttpContextAccessor.HttpContext?.Session.GetString("UserId");
    var isAuthenticated = !string.IsNullOrEmpty(userId);
}

<div class="text-center py-5 bg-light rounded-3 shadow-sm mb-5" style="background-color: #f5f5dc;">
    @if (isAuthenticated)
    {
        <h1 class="display-4 mb-3" style="color: #1e3a8a;">Bienvenue de retour, @userId!</h1>
        <p class="lead mb-4" style="color: #334155;">Continuez votre lecture ou découvrez de nouveaux titres.</p>
    }
    else
    {
        <h1 class="display-4 mb-3" style="color: #1e3a8a;">Bienvenue dans LibraryApp</h1>
        <p class="lead mb-4" style="color: #334155;">Découvrez, empruntez et plongez dans de nouvelles aventures littéraires.</p>
    }

    @* Ajout de la barre de recherche *@
    <div class="input-group mx-auto" style="max-width: 600px;">
        <input type="text" class="form-control form-control-lg" placeholder="Rechercher par titre, auteur, ou ISBN" aria-label="Rechercher des livres" style="border-color: #1e3a8a;">
        <button class="btn btn-outline-dark btn-lg" type="button" id="button-addon2" style="background-color: #1e3a8a; color: #fff;">Rechercher</button>
    </div>

    @if (!isAuthenticated)
    {
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Books" asp-action="Index" class="btn btn-dark btn-lg" style="background-color: #1e3a8a; color: #fff;">Voir les livres</a>
        </div>
    }
</div>

<h3 class="mb-4" style="color: #1e3a8a;">Nouveautés</h3>
<div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
    @if (Model != null && Model.RecentBooks.Any())
    {
        @foreach(var book in Model.RecentBooks)
        {
            <div class="col">
                <div class="card h-100 shadow-sm" style="border-color: #1e3a8a;">
                    @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                    {
                        <img src="@book.CoverImageUrl" class="card-img-top" alt="Couverture de @book.Title" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light text-muted" style="height: 250px;">
                            <span>Pas d'image</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title" style="color: #1e3a8a;">@book.Title</h5>
                        <p class="card-text text-muted">Auteur : @book.Author</p>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-outline-dark" style="border-color: #1e3a8a;">Détails</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12"><p class="text-muted">Aucun livre récent à afficher pour le moment.</p></div>
    }
</div>

<h3 class="mb-4" style="color: #1e3a8a;">Collections Thématiques</h3>
<div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    @if (Model != null && Model.GenreCollections.Any())
    {
        @foreach (var collection in Model.GenreCollections)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@collection.ImageUrl" class="card-img-top" alt="Image de @collection.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-center d-flex flex-column">
                        <h5 class="card-title text-primary">@collection.Name</h5>
                        <p class="card-text flex-grow-1">@collection.Description</p>
                        <a href="@collection.ActionUrl" class="btn btn-sm btn-outline-dark mt-auto">Découvrir</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12"><p class="text-muted">Aucune collection thématique à afficher pour le moment.</p></div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}